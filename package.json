{
  "name": "torrentweb",
  "version": "1.0.0",
  "description": "A webbrowser anonym and decentralized network",
  "main": "index.html",
  "scripts": {
    "test": "standard",
    "build": "browserify --standalone TorrentWeb ./lib/torrentweb.js -t [ babelify --presets [ @babel/preset-env @babel/preset-react ] ] | minify --mangle=false > torrentweb.min.js",
    "build-debug": "browserify --standalone TorrentWeb ./lib/torrentweb.js -t [ babelify --presets [ @babel/preset-env @babel/preset-react ] ] -o torrentweb.debug.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brustulim/bitnet.git"
  },
  "keywords": [
    "decentralization",
    "javascript",
    "webtorrent",
    "crypto"
  ],
  "author": "Herminio Brustulim",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brustulim/bitnet/issues"
  },
  "homepage": "https://github.com/brustulim/bitnet#readme",
  "dependencies": {
    "bs58check": "^2.1.2",
    "ripemd160": "^2.0.2",
    "torrent-discovery": "^9.2.1",
    "tweetnacl": "^1.0.3",
    "webtorrent": "^0.108.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "babel-eslint": "^10.1.0",
    "babel-minify": "^0.5.1",
    "babelify": "^10.0.0",
    "browserify": "^16.5.1",
    "eslint-plugin-html": "^6.0.2",
    "standard": "*"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "standard": {
    "plugins": [
      "html"
    ],
    "parser": "babel-eslint"
  }
}
